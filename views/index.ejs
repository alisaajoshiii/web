<div class="row mb-4">
  <div class="col-12">
    <div class="home-banner shadow-sm position-relative text-center"
      style="background: linear-gradient(135deg, #ffb6c1, #ffd1dc); border-radius: 10px; padding: 40px 20px;">
      <h1 class="display-3 fw-bold text-white mb-2" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.1);">20% OFF ALL
        CROCHET!</h1>
      <p class="fs-4 text-white mb-4">Celebrate Aura Sissies Grand Opening with massive discounts</p>
      <a href="/shop" class="btn btn-light btn-lg rounded-pill px-5 text-danger fw-bold shadow-sm">SHOP THE SALE NOW</a>
    </div>
  </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="section-title mb-0">Just For You</h3>
</div>

<div class="row row-cols-2 row-cols-md-4 row-cols-lg-6 g-3">
  <% products.forEach(product=> { %>
    <div class="col">
      <a href="/shop/product/<%= product.id %>" class="text-decoration-none">
        <div class="daraz-card">
          <img src="/images/products/<%= product.image %>" class="daraz-card-img" alt="<%= product.name %>">
          <div class="daraz-card-body">
            <div class="daraz-card-title">
              <%= product.name %>
            </div>
            <div class="daraz-card-price">Rs. <%= product.price %>
            </div>
            <% if (product.price> 100) { %>
              <div class="daraz-card-old-price">Rs. <%= Number(product.price) + 50 %>
              </div>
              <% } %>
                <div class="daraz-card-rating mt-auto">
                  ★★★★★ <span class="text-muted">(12)</span>
                </div>
          </div>
        </div>
      </a>
    </div>
    <% }) %>
</div>

<div class="text-center mt-4">
  <a href="/shop" class="btn btn-outline-secondary px-5 py-2">LOAD MORE</a>
</div>