<h2 class="mb-4">Shopping Cart</h2>
<% if (cart.length === 0) { %>
  <div class="alert alert-info">Your cart is empty. <a href="/shop">Start shopping</a></div>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-bordered align-middle">
      <thead class="table-light">
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% cart.forEach(item => { %>
          <tr>
            <td>
              <div class="d-flex align-items-center">
                <img src="/images/products/<%= item.product.image %>" width="50" class="me-3 rounded">
                <%= item.product.name %>
              </div>
            </td>
            <td>Rs <%= item.product.price %></td>
            <td><%= item.quantity %></td>
            <td>Rs <%= item.product.price * item.quantity %></td>
          </tr>
        <% }) %>
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="text-end fw-bold">Total:</td>
          <td class="fw-bold fs-5 text-primary">Rs <%= total %></td>
        </tr>
      </tfoot>
    </table>
  </div>
  <div class="text-end mt-3">
    <form action="/shop/checkout" method="POST">
      <button type="submit" class="btn btn-success btn-lg">Checkout Now</button>
    </form>
    <small class="text-muted d-block mt-2">Payments are processed securely (mock integration).</small>
  </div>
<% } %>