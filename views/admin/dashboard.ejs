<div class="row mb-4">
  <div class="col-12">
    <h2 class="border-bottom pb-2">Admin Dashboard</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-3">
    <div class="list-group">
      <a href="/admin" class="list-group-item list-group-item-action active">Dashboard Summary</a>
      <a href="/admin/products" class="list-group-item list-group-item-action">Manage Products</a>
      <a href="/admin/orders" class="list-group-item list-group-item-action">Manage Orders</a>
    </div>
  </div>
  <div class="col-md-9">
    <div class="row text-center mb-4">
      <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Products</h5>
            <h2><%= productCount %></h2>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
          <div class="card-body">
            <h5 class="card-title">Total Orders</h5>
            <h2><%= orderCount %></h2>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
          <div class="card-body">
            <h5 class="card-title">Registered Users</h5>
            <h2><%= userCount %></h2>
          </div>
        </div>
      </div>
    </div>
    
    <h4>Recent Orders</h4>
    <table class="table table-striped table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Total</th>
          <th>Status</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% recentOrders.forEach(order => { %>
          <tr>
            <td>#<%= order.id %></td>
            <td><%= order.User.name %> (<%= order.User.email %>)</td>
            <td>Rs <%= order.totalAmount %></td>
            <td><span class="badge bg-warning text-dark"><%= order.status %></span></td>
            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>